<!--pages/Category/child-category/conent/conent.wxml-->
<scroll-view class='content' scroll-y>
  <!-- 1.子类别展示 -->
  <view class='subcategory'>
    <block wx:for="{{subcategories}}" wx:key="index">
      <view class='item'>
        <image src="{{item.image}}" mode='widthFix'/>
        <view>{{item.title}}</view>
      </view>
    </block>
  </view>
  <view class='detail'>
    <home-goods goodslist="{{categoryDetail}}"/>
  </view>
</scroll-view>
 